mixin booking-form__services(name, price, info)
	.booking-form__services
		if info == true
			.services-title(class='sevices-info')= name
			.services-title= price
		else 
			.services-title= name
			.services-title= price

mixin booking-form()
	.booking-form
		.wrapper-for-forms
			.booking-form__info
				.booking-form__title
					h3 №
					h1.form__title 888 
					h3.lux Люкс
				.booking-form__price-of-number
					h3 9 990₽
					p в сутки
			.forms__date-selects
				.date-select__block
					h3.form-element__title Прибытие
					+input-with-arrow('19.08.2019', 'start-input')
				.date-select__block
					h3.form-element__title Выезд
					+input-with-arrow('23.08.2019', 'end-input')
			.forms__guest-select
				h3.form-element__title Гости
				+input-with-arrow('3 гостя', 'open-select')
			.booking-form__services-block
				+booking-form__services('9 990₽ х 4 суток', '39 960₽', false)
				+booking-form__services('Сбор за услуги: скидка 2 179₽', '0₽', true)
				+booking-form__services('Сбор за дополнительные услуги', '300₽', true)
			.booking-form__total-block 
				h2 Итого
				span.line 
				h2 38 081₽
			.forms__submit-btn
				+btn-with-arrow('забронировать')